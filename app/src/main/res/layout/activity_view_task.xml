<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ViewTask">

    <ImageView
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="97dp"
        android:layout_marginStart="8dp"

        app:srcCompat="@drawable/viewtask" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="28dp">
    <TextView
        android:id="@+id/name"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/back"
        android:layout_marginEnd="8dp"
        android:background="@drawable/etblue"
        android:ems="10"
        android:hint="Name"
        android:inputType="date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:layout_marginTop="15dp"
        android:background="@drawable/etgreen"
        android:ems="10"
        android:hint="Start Date"
        android:inputType="date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_below="@id/startDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/etblue"
        android:ems="10"
        android:hint="Deadline"
        android:inputType="date"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/priority"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/endDate"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/etgreen"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/preftime"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/priority"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/etblue"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/estDuration"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/endDate"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"

        android:background="@drawable/etgreen"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="348dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/preftime"

        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/etblue"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/desc"
        android:layout_marginTop="25dp"
        android:background="@drawable/btnblack"
        android:text="UPDATE" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_below="@id/btnupdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/btnred"
        android:text="BACK" />

    <Button
        android:id="@+id/btnstart"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_below="@id/btnback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/btngreen"
        android:text="START TASK" />
    </LinearLayout>
</LinearLayout>