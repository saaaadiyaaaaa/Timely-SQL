<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/timelyLogo"
        android:layout_width="185dp"
        android:layout_height="181dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/timely_final" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:layout_below="@id/timelyLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/etblue"
        android:elevation="3dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"

        android:textAlignment="center"
        android:textColor="#707070"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:layout_below="@id/editEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/etgreen"
        android:elevation="3dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"

        android:textAlignment="center"
        android:textColor="#707070"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="162dp"
        android:layout_height="52dp"
        android:layout_below="@id/editPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="LOGIN"
        android:textColor="#ff000000"
        android:textSize="21sp"
        />


    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="157dp"
        android:layout_height="27dp"
        android:layout_below="@id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textSize="19dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/buttonRegister"
        android:layout_width="157dp"
        android:layout_height="27dp"
        android:layout_below="@id/forgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="19dp"
        android:textStyle="italic"
        />

    <ProgressBar
        android:id="@+id/signInProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="#00000000"
        android:elevation="10dp"
        android:progressTint="#00000000"
        android:indeterminateTint="@color/colorPrimaryDark"/><![CDATA[

    android:inputType="textPassword"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="417dp" />


]]>
</RelativeLayout>