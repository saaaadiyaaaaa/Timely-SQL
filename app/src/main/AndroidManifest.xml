<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sqltodo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/timely_final"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TipsTrick"></activity>
        <activity android:name=".Activities.Completed" />
        <activity android:name=".Activities.SelectDateAndTimeActivity" />
        <activity android:name=".Activities.Timer" />
        <activity android:name=".Activities.EditTask" />
        <activity android:name=".Profile" />
        <activity android:name=".Activities.ViewTask" />
        <activity
            android:name=".Activities.TaskCard"
            android:label="@string/title_activity_task_card"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.AddTask" />
        <activity android:name=".Activities.CalendarCard" />
        <activity android:name=".Activities.ReportCard" />
        <activity android:name=".Activities.CreateEventActivity" />
        <activity android:name=".Dashboard" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>